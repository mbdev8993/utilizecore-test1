<p id="notice"><%= notice %></p>

<h1>List Parcels</h1>

<br />

<%= link_to 'New Parcel', new_parcel_path %>

<br /><br />

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Weight</th>
      <th scope="col">Status</th>
      <th scope="col">Service Type</th>
      <th scope="col">Payment Mode</th>
      <th scope="col">Sender</th>
      <th scope="col">Receiver</th>
      <th scope="col">Tracking ID</th>
      <th scope="col", colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @parcels.each do |parcel| %>
      <tr>
        <td><%= parcel.weight %></td>
        <td><%= parcel.status %></td>
        <td><%= parcel.service_type.name %></td>
        <td><%= parcel.payment_mode %></td>
        <td><%= parcel.sender.name %></td>
        <td><%= parcel.receiver.name %></td>
        <td><%= parcel.tracking_id %></td>
        <td><%= link_to 'Show', parcel %></td>
        <td><%= link_to 'Edit', edit_parcel_path(parcel) %></td>
        <td><%= link_to 'Destroy', parcel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
